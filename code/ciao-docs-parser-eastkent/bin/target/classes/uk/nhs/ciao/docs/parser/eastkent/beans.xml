<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="EastKentPropertiesExtractor" class="uk.nhs.ciao.docs.parser.eastkent.EastKentPropertiesExtractorFactory" factory-method="createEDDischargeExtractor" />
	
	<bean id="documentParser" class="uk.nhs.ciao.docs.parser.TikaDocumentParser">
		<constructor-arg>
			<bean class="uk.nhs.ciao.docs.parser.TikaParserFactory" factory-method="createParser" />
		</constructor-arg>
		<constructor-arg>
			<bean class="uk.nhs.ciao.docs.parser.extractor.MultiPropertiesExtractor">
				<constructor-arg>
					<array>
						<ref bean="EastKentPropertiesExtractor"/>
					</array>
				</constructor-arg>
			</bean>			
		</constructor-arg>
	</bean>
	
</beans>
